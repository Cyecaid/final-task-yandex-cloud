FROM mcr.microsoft.com/dotnet/sdk:8.0 AS build
WORKDIR /src

COPY ["FinalTask.csproj", "./"]

RUN dotnet restore "FinalTask.csproj"

COPY . .

RUN dotnet publish "FinalTask.csproj" -c Release -o /app/publish

FROM mcr.microsoft.com/dotnet/aspnet:8.0
WORKDIR /app
COPY --from=build /app/publish .

ENV PORT 8080
EXPOSE 8080

ENTRYPOINT ["dotnet", "FinalTask.dll"]